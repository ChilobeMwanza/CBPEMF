package change;

import java.util.List;

import org.eclipse.emf.common.notify.Notification;
import org.eclipse.emf.ecore.EList
import org.eclipse.emf.ecore.EObject;

import impl.DeltaResourceImpl;

public class SetEReferenceManyEvent extends Event 
{
	private enum NotifierType
	{
		EOBJECT,
		RESOURCE;
	}
	
	private NotifierType type;
	
	private List<Object> obj_list;
	private EObject focus_obj;
	
	public SetEReferenceManyEvent(List<Object> obj_list, NotifierType type)
	{
		super(Event.SET_EREFERENCE_MANY);
		
		this.obj_list = obj_list;
		this.type = type;
	}
	
	public SetEReferenceManyEvent(EObject focus_obj,List<Object> obj_list, NotifierType type)
	{
		super(Event.SET_EREFERENCE_MANY);
		
		this.focus_obj = focus_obj;
		this.obj_list = obj_list;
		this.type = type;
	}
	
	
	public SetEReferenceManyEvent(Notification n)
	{
		super(Event.SET_EREFERENCE_MANY);
		
		this.obj_list = (List<EObject>) n.getNewValue();
		
		 if(n.getNotifier() instanceof DeltaResourceImpl)
		 {
			 this.type = NotifierType.RESOURCE;
		 }
		 else if(n.getNotifier() instanceof EList<Object>)
		 {
			 this.type = NotifierType.EOBJECT;
			 this.focus_obj = (EList<Object>) n.getNotifier();
		 }
			 
	}
	
	public NotifierType getNotifierType()
	{
		return this.type;
	}
	
	public List<Object> getNewValue()
	{
		return this.obj_list;
	}
	
	public EList<Object> getEObjectList()
	{
		return this.focus_obj;
	}
}
